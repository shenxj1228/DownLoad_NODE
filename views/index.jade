    function pageload(widthpercent, speed) {
            var width = widthpercent * 1+ '%';
            if (widthpercent == 100) {
              $('.pageload').stop(true,true)
              .animate({ width: "100%" }, speed, function () {
                    $('.pageload').animate({ width: '0' }, 0);
                });
            } else {
                $('.pageload').animate({ width: width }, speed);
            }

        }
